[color]
  ui = true
[core]
  pager = less
[push]
  default = matching
[init]
  defaultBranch = main

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[delta]
  line-numbers = true
  plus-style = "syntax #012800"
  minus-style = "syntax #340001"
  syntax-theme = Monokai Extended
  navigate = true

[interactive]
#    diffFilter = delta --color-only
  diffFilter = delta
